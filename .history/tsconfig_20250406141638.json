{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["assets/*"]
    },
    "jsx": "preserve",
    "esModuleInterop": true,
    "types": ["framer-motion", "three", "@react-three/fiber", "@react-three/drei"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "node_modules/three/examples/jsm/**/*"  // âœ… Enables autocompletion for `Line2`, etc.
  ],
  "exclude": ["node_modules"]
}
